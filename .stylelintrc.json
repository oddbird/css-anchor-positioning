{
  "extends": "stylelint-config-standard",
  "rules": {
    "string-quotes": "single",
    "selector-type-no-unknown": null,
    "at-rule-no-unknown": [
      true,
      { "ignoreAtRules": ["position-fallback", "try"] }
    ],
    "function-no-unknown": [
      true,
      { "ignoreFunctions": ["anchor", "anchor-size"] }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "anchor-name",
          "anchor-scroll",
          "position-fallback"
        ]
      }
    ]
  }
}
